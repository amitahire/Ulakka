{
    "description": "Basic client-server edition",
    "plugins": [
        "tiddlywiki/tiddlyweb",
        "tiddlywiki/filesystem",
        "tiddlywiki/highlight"
    ],
    "themes": [
        "tiddlywiki/vanilla",
        "tiddlywiki/snowwhite"
    ],
    "build": {
        "index": [
             "--output",
            "./blog",
            "--rendertiddler",
            "indexTemplate",
            "index.html",
            "text/plain"
        ],
        "posts": [
            "--output",
            "./blog",
            "--rendertiddlers",
            "[entry-type[Blog-post]!sort[modified]limit[10]]",
            "postTemplate",
            "./",
            "text/plain",
            ".html",
            "noclean"
        ],
         "misc": [
         "--output",
            "./blog",
         "--rendertiddlers",
            "[entry-type[Misc]!sort[modified]limit[10]]",
            "postTemplate",
            "./",
            "text/plain",
            ".html",
            "noclean"
            ]
        
    }
}