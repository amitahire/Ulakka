{
    "description": "Basic client-server edition",
    "plugins": [
        "tiddlywiki/tiddlyweb",
        "tiddlywiki/filesystem",
        "tiddlywiki/highlight"
    ],
    "themes": [
        "tiddlywiki/vanilla",
        "tiddlywiki/snowwhite"
    ],
    "build": {
        "index": [
            "--output",
            "./blog",
            "--rendertiddler",
            "indexTemplate",
            "index.html",
            "text/plain"
        ],
        "archive": [
            "--output",
            "./blog",
            "--rendertiddler",
            "archiveTemplate",
            "archives.html",
            "text/plain"
        ],
        "posts": [
            "--output",
            "./blog",
            "--rendertiddlers",
            "[type[blog/blog-post]!sort[modified]limit[10]]",
            "postTemplate",
            "./",
            "text/plain",
            ".html",
            "noclean"
        ],
         "misc": [
         "--output",
            "./blog",
         "--rendertiddlers",
            "[type[blog/misc]!sort[modified]limit[10]]",
            "postTemplate",
            "./",
            "text/plain",
            ".html",
            "noclean"
            ]
        
    }
}