{
    "description": "Basic client-server edition",
    "plugins": [
        "tiddlywiki/tiddlyweb",
        "tiddlywiki/filesystem",
        "tiddlywiki/highlight"
    ],
    "themes": [
        "tiddlywiki/vanilla",
        "tiddlywiki/snowwhite"
    ],
    "build": {
        "index": [
            "--rendertiddler",
            "IndexTemplate",
            "index.html",
            "text/plain"
        ],
        "posts": [
            "--rendertiddlers",
            "[!is[system]status[post]]",
            "postTemplate",
            "./posts/",
            "text/plain",
            ".html",
            "noclean"
        ],
        "archives": [
            "--rendertiddler",
            "archives",
            "./posts/archives.html",
            "text/plain"
        ]
    }
}